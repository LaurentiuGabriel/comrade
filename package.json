{
  "name": "comrade-workspace",
  "private": true,
  "version": "0.1.0",
  "description": "Comrade - AI-powered workspace for teams",
  "scripts": {
    "dev": "pnpm dev:desktop",
    "dev:desktop": "pnpm --filter @comrade/desktop dev",
    "dev:server": "pnpm --filter @comrade/server dev",
    "dev:ui": "pnpm --filter @comrade/ui dev",
    "build": "pnpm -r build",
    "build:desktop": "pnpm --filter @comrade/desktop build",
    "build:server": "pnpm --filter @comrade/server build",
    "build:ui": "pnpm --filter @comrade/ui build",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "cli": "pnpm --filter @comrade/cli cli",
    "lint": "eslint packages --ext .ts,.tsx",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,css}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/comrade.git"
  },
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^24.0.0"
  }
}
